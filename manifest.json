{
    "name": "CanvasDownloader",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["webRequest", "downloads", "webRequestBlocking", "tabs", "<all_urls>"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "CanvasDownloader"
    },
    "background": {
        "scripts": ["bgp.js"],
        "persistent": true
      }
}